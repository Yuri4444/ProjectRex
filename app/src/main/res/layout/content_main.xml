<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/greenBlack">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/art" />

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/fab_language"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="bottom|end"-->
<!--            android:layout_margin="@dimen/fab_margin"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:focusable="true"-->
<!--            android:src="@drawable/ic_language"-->
<!--            app:backgroundTint="@color/white" />-->

        <!--        Гризонтальные кнопки-->
        <Button
            android:id="@+id/fab_language"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:text="Наземные" />


        <Button
            android:backgroundTint="@color/blueBlack"
            android:id="@+id/fab_marine"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:text="Водные" />

        <Button
            android:id="@+id/fab_fly"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/redDark"
            android:focusable="true"
            android:text="Воздух" />
        <!--        Гризонтальные кнопки-->




        <!--        Вертикальные кнопки НАЗЕМНЫЕ-->
        <Button
            android:backgroundTint="@color/redDark"
            android:text="English"
            android:visibility="invisible"
            android:id="@+id/fab_england"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginBottom="70dp"
            android:layout_gravity="bottom|center" />

        <Button
            android:backgroundTint="@color/blueBlack"
            android:text="Русский"
            android:visibility="invisible"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="115dp"
            android:id="@+id/fab_russia"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:focusable="true" />
        <!--        Вертикальные кнопки НАЗЕМНЫЕ-->



        <!--        Вертикальные кнопки ВОЗДУХ-->
        <Button
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/redDark"
            android:text="English"
            android:visibility="invisible"
            android:id="@+id/fab_england_fly"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginBottom="70dp"
            android:layout_gravity="bottom|start" />

        <Button
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/blueBlack"
            android:text="Русский"
            android:visibility="invisible"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="115dp"
            android:id="@+id/fab_russia_fly"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:focusable="true" />
        <!--        Вертикальные кнопки ВОЗДУХ-->



        <!--        Вертикальные кнопки ВОДНЫЕ-->
        <Button
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/redDark"
            android:text="English"
            android:visibility="invisible"
            android:id="@+id/fab_england_swim"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginBottom="70dp"
            android:layout_gravity="bottom|end" />

        <Button
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/blueBlack"
            android:text="Русский"
            android:visibility="invisible"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="115dp"
            android:id="@+id/fab_russia_swim"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:focusable="true" />


        <!--        Вертикальные кнопки ВОДНЫЕ-->


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>